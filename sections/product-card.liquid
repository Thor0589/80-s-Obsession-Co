{% assign product = section.settings.product %}
<div
  class="product-card"
  style="
    background: #fff5f8;
    border: 2px solid #f9a1de;
    border-radius: 16px;
    padding: 1.5rem;
    box-shadow: 0 4px 12px rgba(160, 76, 154, 0.2);
    transition: transform 0.3s ease;
    text-align: center;
    font-family: 'Helvetica Neue', sans-serif;
  "
>
  <a href="{{ product.url }}">
    {% if product.featured_image %}
      <img
        src="{{ product.featured_image | image_url: width: 600 }}"
        alt="{{ product.title | escape }}"
        style="border-radius: 8px; max-width: 100%; height: auto; margin-bottom: 1rem;"
      >
    {% endif %}
    <h3 style="color: #a04c9a; font-weight: bold; font-size: 1.2rem; margin-bottom: 0.5rem;">
      {{ product.title }}
    </h3>
    <p style="color: #333; margin-bottom: 1rem;">
      {% if product.price < product.compare_at_price %}
        <span style="text-decoration: line-through; color: #888;">
          {{ product.compare_at_price | money }}
        </span>
        <span style="font-weight: bold; color: #a04c9a;">
          {{ product.price | money }}
        </span>
      {% else %}
        <span style="font-weight: bold; color: #a04c9a;">
          {{ product.price | money }}
        </span>
      {% endif %}
    </p>
    <button
      class="glam-button"
      style="
        background-color: #a04c9a;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 30px;
        font-weight: bold;
        font-size: 0.9rem;
        cursor: pointer;
        transition: background 0.3s ease;
      "
    >
      View Product
    </button>
  </a>
</div>
